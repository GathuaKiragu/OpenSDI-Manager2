<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans     http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
			http://www.springframework.org/schema/context   http://www.springframework.org/schema/context/spring-context-2.5.xsd"
       default-autowire="byName">
    <context:annotation-config/>
    <import resource="datasource.xml"/>
    <bean id="searchProcessor" class="com.googlecode.genericdao.search.jpa.JPASearchProcessor">
        <constructor-arg ref="metadataUtil"/>
    </bean>
    <bean id="metadataUtil" class="com.googlecode.genericdao.search.jpa.hibernate.HibernateMetadataUtil"
          factory-method="getInstanceForEntityManagerFactory">
        <constructor-arg ref="opensdiEntityManagerFactory"/>
    </bean>
    <bean id="plotDao" class="it.geosolutions.opensdi2.persistence.PlotDaoImpl">
        <property name="searchProcessor" ref="searchProcessor"/>
    </bean>
    <bean id="plotService" class="it.geosolutions.opensdi2.service.PlotService"/>
    <bean id="plotModuleHerbaceousDao" class="it.geosolutions.opensdi2.persistence.PlotModuleHerbaceousDaoImpl">
        <property name="searchProcessor" ref="searchProcessor"/>
    </bean>
    <bean id="plotModuleHerbaceousService" class="it.geosolutions.opensdi2.service.PlotModuleHerbaceousService"/>
    <bean id="herbaceousRelativeCoverDao" class="it.geosolutions.opensdi2.persistence.HerbaceousRelativeCoverDaoImpl">
        <property name="searchProcessor" ref="searchProcessor"/>
    </bean>
    <bean id="herbaceousRelativeCoverService" class="it.geosolutions.opensdi2.service.HerbaceousRelativeCoverService"/>
    <bean id="woodyImportanceValueDao" class="it.geosolutions.opensdi2.persistence.WoodyImportanceValueDaoImpl">
        <property name="searchProcessor" ref="searchProcessor"/>
    </bean>
    <bean id="woodyImportanceValueService" class="it.geosolutions.opensdi2.service.WoodyImportanceValueService"/>
    <bean id="speciesDao" class="it.geosolutions.opensdi2.persistence.SpeciesDaoImpl">
        <property name="searchProcessor" ref="searchProcessor"/>
    </bean>
    <bean id="speciesService" class="it.geosolutions.opensdi2.service.SpeciesService"/>
    <bean id="metricsDao" class="it.geosolutions.opensdi2.persistence.MetricsDaoImpl">
        <property name="searchProcessor" ref="searchProcessor"/>
    </bean>
    <bean id="metricsService" class="it.geosolutions.opensdi2.service.MetricsService"/>
    <bean id="plotModuleWoodyRawDao" class="it.geosolutions.opensdi2.persistence.PlotModuleWoodyRawDaoImpl">
        <property name="searchProcessor" ref="searchProcessor"/>
    </bean>
    <bean id="plotModuleWoodyRawService" class="it.geosolutions.opensdi2.service.PlotModuleWoodyRawService"/>
    <bean id="plotModuleWoodyDbhDao" class="it.geosolutions.opensdi2.persistence.PlotModuleWoodyDbhDaoImpl">
        <property name="searchProcessor" ref="searchProcessor"/>
    </bean>
    <bean id="plotModuleWoodyDbhService" class="it.geosolutions.opensdi2.service.PlotModuleWoodyDbhService"/>
    <bean id="plotModuleWoodyDbhCmDao" class="it.geosolutions.opensdi2.persistence.PlotModuleWoodyDbhCmDaoImpl">
        <property name="searchProcessor" ref="searchProcessor"/>
    </bean>
    <bean id="plotModuleWoodyDbhCmService" class="it.geosolutions.opensdi2.service.PlotModuleWoodyDbhCmService"/>
    <bean id="plotModuleHerbaceousInfoDao" class="it.geosolutions.opensdi2.persistence.PlotModuleHerbaceousInfoDaoImpl">
        <property name="searchProcessor" ref="searchProcessor"/>
    </bean>
    <bean id="plotModuleHerbaceousInfoService" class="it.geosolutions.opensdi2.service.PlotModuleHerbaceousInfoService"/>
</beans>